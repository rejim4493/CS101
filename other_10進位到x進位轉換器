//更改nary常數即可
//c++寫法
//nega number break;
#include <stdio.h>
constexpr int nary = 3;

int main()
{
    int N = 0;
    while(scanf("%d", &N) == 1 && N>=0)//n<0 break;
    {
        int rm[100] = {};//儲存每一個x進位的值
        int i = 0;
        
        if(N == 0){
            printf("0");
        }
        while(N>0){
            rm[i]=N%nary;//取餘數，得到x進位的一位
            i+=1;//index++
            N=N/nary;//除以x，繼續下一位
        }

        for(int j=i-1;j>=0;j-=1){
            printf("%d",rm[j]);
        }
        printf("\n");
    }
    return 0;
}
