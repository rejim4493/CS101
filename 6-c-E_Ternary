int main(void)
{
  int n = 0;
  int c = 1;
  while(c <= 100 && c > 0){
    while(n != -1){
        int i = 0;
        int t[65] = {};
        int rm = 0;
  
        scanf("%d", &n);
  
        while(n >= 1){
            rm = n % 3;
            //printf("%d\n", rm);
            n = n - rm;
            //printf("%d\n", n);
            n = n / 3;
            //printf("%d\n", n);
            i += 1;
            t[i] = rm;
        }
    
        for(; i > 0; i -= 1){
            printf("%d", t[i]);
        }
  
        printf("\n");
        c += 1;
  
        if(n == -1){
            break;
        }
    }
  break;
  }
  return 0;
}

