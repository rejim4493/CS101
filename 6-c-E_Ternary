        if(n < 0){
            break;
        }
        if(n == 0){
            printf("0\n");
        }else{
            while(n >= 1){
                rm = n % 3;

                n = n / 3;
                //printf("%d\n", n);
                i += 1;
                t[i] = rm;
            }
        
            for(; i > 0; i -= 1){
                printf("%d", t[i]);
            }
            printf("\n");
        }
            
    }
//AI正解
#include <stdio.h>

int main(void) {
    long long n;
    while (scanf("%lld", &n) == 1 && n >= 0) {
        if (n == 0) {
            printf("0\n");
            continue;
        }

        int t[65], i = 0;
        while (n > 0) {
            t[i++] = n % 3;
            n /= 3;
        }

        for (int j = i - 1; j >= 0; j--) {
            printf("%d", t[j]);
        }
        printf("\n");
    }
    return 0;
}

  return 0;
}
