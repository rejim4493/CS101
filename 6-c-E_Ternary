/*
You will be given a decimal number. You will have to convert it to its ternary (Base 3) equivalent.
Input
The input file contains at most 100 lines of inputs. Each line contains a non-negative decimal integer
N (N < 1000000001). Input is terminated by a line containing a negative value. This line should not
be processed.
Output
For each line of input produce one line of output. This line contains the ternary equivalent of decimal
value N.
Sample Input
10
100
1000
-1
Sample Output
101
10201
1101001
*/
//錯誤版本
#include <stdio.h>

int main(void)
{
  int n = 0;
  int c = 1;
  while(c <= 100 && c > 0){
    while(n != -1){
        int i = 0;
        int t[65] = {};
        int rm = 0;
  
        scanf("%d", &n);
  
        while(n >= 1){
            rm = n % 3;
            //printf("%d\n", rm);
            n = n - rm;
            //printf("%d\n", n);
            n = n / 3;
            //printf("%d\n", n);
            i += 1;
            t[i] = rm;
        }
    
        for(; i > 0; i -= 1){
            printf("%d", t[i]);
        }
  
        printf("\n");
        c += 1;
  
        if(n == -1){
            break;
        }
    }
  break;
  }
  return 0;
}

//正確

#include <stdio.h>

int main(void)
{
  long long n = 1;
  int c = 1;
    while(n >= 0){
    
        int i = 0;
        int t[66] = {0};
        int rm = 0;
  
        scanf("%lld", &n);
        if(n < 0){
            break;
        }
        if(n == 0){
            printf("0\n");
        }else{
            while(n >= 1){
                rm = n % 3;

                n = n / 3;
                //printf("%d\n", n);
                i += 1;
                t[i] = rm;
            }
        
            for(; i > 0; i -= 1){
                printf("%d", t[i]);
            }
            printf("\n");
        }
            
    }
//AI正解
#include <stdio.h>

int main(void) {
    long long n;
    while (scanf("%lld", &n) == 1 && n >= 0) {
        if (n == 0) {
            printf("0\n");
            continue;
        }

        int t[65], i = 0;
        while (n > 0) {
            t[i++] = n % 3;
            n /= 3;
        }

        for (int j = i - 1; j >= 0; j--) {
            printf("%d", t[j]);
        }
        printf("\n");
    }
    return 0;
}

  return 0;
}
